<?xml version="1.0"?>
<openerp>
  <data>

    <!-- Purchase Order Form View -->

    <record id="purchase_order_form" model="ir.ui.view">
      <field name="name">purchase.order.form.inherit</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
	<!-- Hide button "Send by Email" ???-->
	<button name="wkf_send_rfq" position="attributes">
	  <attribute name='states'>draft,sent,approved,done</attribute>
	  <attribute name='invisible'>1</attribute>
	</button>
	
	<!-- Hide button view_invoice -->
	<button name="view_invoice" position="attributes">
	  <attribute name='invisible'>1</attribute> 
	</button>
	<!-- Showing only selected status -->
	<field name="state" position="attributes">
	  <attribute name='statusbar_visible'>draf,approved,done</attribute> 
	</field>
	<!-- Hiding Supplier -->
	<field name="partner_id" position="attributes">
	  <attribute name='invisible'>True</attribute> 
	</field>
	<field name="date_order" position="replace"/>
	<field name="partner_ref" position="replace"/>

	<!--field name="date_order" position="replace"/-->
	<field name="partner_id" position="after">
	  <!-- SISCOP new  fields -->
	  <field name="date_order"/>
	  <field name="requester"/>
	  <field name="purchase_project"/>
	  <!-- Item_Budget Copound field -->
	  <field name="item_budget_id" on_change="onchange_item_budget_id(item_budget_id, code, balance)"/>
	  <field name="code" readonly="True"/>
	  <field name="balance" readonly="True"/>
	  <!-- Director -->
	  <field name="approver"/>
	</field>

	<!-- Hide notebook pages -->

	<page string="RFQ &amp; Bid" position="attributes">
	  <attribute name='invisible'>1</attribute> 
	</page>

	<page string="Deliveries &amp; Invoices" position="attributes">
	  <attribute name='invisible'>1</attribute> 
	</page>

	<!-- Hide fields  -->

	<field name="origin" position="attributes">
	  <attribute name="invisible">1</attribute>
	</field>
	<field name="picking_type_id" position="attributes">
	  <attribute name="invisible">1</attribute>
	</field>
	<field name="date_planned" position="attributes">
	  <attribute name="invisible">True</attribute>
	</field>
	<field name="taxes_id" position="attributes">
	  <attribute name="invisible">True</attribute>
	</field>
	<field name="amount_untaxed" position="attributes">
	  <attribute name="invisible">True</attribute>
	</field>
	<field name="amount_tax" position="attributes">
	  <attribute name="invisible">True</attribute>
	</field>
        <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" 
	       position="before">
	  <field name="sequence" readonly="True"/>
        </xpath>
      </field>
    </record>

    <!-- Purchase Order Tree View -->

    <record id="purchase_order_tree" model="ir.ui.view">
      <field name="name">purchase.order.tree.inherit</field>
      <field name="model">purchase.order</field>
      <field name="view_type">tree</field>
      <field name="inherit_id" ref="purchase.purchase_order_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name = 'minimum_planned_date']" position="attributes">
	  <attribute name='invisible'>1</attribute> 
        </xpath>
        <xpath expr="//tree/field[@name = 'origin']" position="attributes">
	  <attribute name='invisible'>1</attribute> 
        </xpath>
        <xpath expr="//tree/field[@name = 'amount_untaxed']" position="attributes">
	  <attribute name='invisible'>1</attribute> 
        </xpath>
        <xpath expr="//tree/field[@name = 'partner_id']" position="attributes">
	  <attribute name='invisible'>1</attribute> 
        </xpath>
      </field>
    </record>

    <!-- Hide Menus-->

    <menuitem id="account.menu_finance" name="Invoicing"
        groups="group_siscop_hide" sequence="50"/>
    <menuitem id="purchase.menu_procurement_management_invoice" name="Invoice Control"
        groups="group_siscop_hide" sequence="6"/>
    <menuitem id="purchase.menu_procurement_management_inventory" name="Incoming Products"
        groups="group_siscop_hide" parent="base.menu_purchase_root" sequence="4"/>
    <menuitem id="base.menu_procurement_management_supplier_name" name="Suppliers"
        groups="group_siscop_hide" parent="purchase.menu_procurement_management" 
	action="base.action_partner_supplier_form" sequence="15"/>
	
  </data>
</openerp>


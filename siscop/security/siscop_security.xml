      <field name="groups_id" eval="[(3,ref('group_siscop_user'))]"/>
    </record>

    <record id="purchase.menu_procurement_management_invoice" model="ir.ui.menu">
      <field name="groups_id" eval="[(3,ref('group_siscop_user'))]"/>
    </record-->
  </data>
</openerp>
